<style>
    textarea {
        width: 100%;
        padding: 5px;
        height: 400px;
        font-size: 15px;
        line-height: 1.5;
        border: 1px solid #ddd;
    }

    #codetoolbox .btn-group {
        margin: 5px 5px 5px 0;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-2">
                    <textarea id="txtCode1">一二12ab</textarea>
                </div>
                <div class="col-sm-5">
                    <div class="accordion" id="codetoolbox">
                        <div class="card">
                            <div id="headingOne" class="card-header px-0 py-0">
                                <button class="btn btn-light btn-block" data-target="#collapseOne" data-toggle="collapse">
                                    加密 / 解密
                                </button>
                            </div>
                            <div id="collapseOne" class="collapse show" data-parent="#codetoolbox">
                                <div class="card-body px-2 py-2">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">密钥：</span>
                                        </div>
                                        <input type="text" class="form-control" id="txtKey1" placeholder="请输入密钥">
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success">AES</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success">DES</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success">RC4</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success">Rabbit</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success">TripleDES</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div id="headingTwo" class="card-header px-0 py-0">
                                <button class="btn btn-light btn-block" data-target="#collapseTwo" data-toggle="collapse">
                                    散列 / 哈希
                                </button>
                            </div>
                            <div id="collapseTwo" class="collapse" data-parent="#codetoolbox">
                                <div class="card-body px-2 py-2">
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-primary">MD5</button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-primary">SHA1</button>
                                        <button type="button" class="btn btn-light">224</button>
                                        <button type="button" class="btn btn-light">256</button>
                                        <button type="button" class="btn btn-light">384</button>
                                        <button type="button" class="btn btn-light">512</button>
                                    </div>
                                    <div class="card mt-3">
                                        <div class="input-group input-group-sm">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">密钥：</span>
                                            </div>
                                            <input type="text" class="form-control" id="txtKey2" placeholder="HmacSHA、HmacMD5密钥">
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-primary">HmacSHA1</button>
                                            <button type="button" class="btn btn-light">224</button>
                                            <button type="button" class="btn btn-light">256</button>
                                            <button type="button" class="btn btn-light">384</button>
                                            <button type="button" class="btn btn-light">512</button>
                                            <button type="button" class="btn btn-light">HmacMD5</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div id="headingThree" class="card-header px-0 py-0">
                                <button class="btn btn-light btn-block" data-target="#collapseThree" data-toggle="collapse">
                                    编码 / 转换
                                </button>
                            </div>
                            <div id="collapseThree" class="collapse" data-parent="#codetoolbox">
                                <div class="card-body px-2 py-2">
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-info">encodeURI</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-info">encodeURIComponent</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-info">Base64</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-info">Unicode</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-info">ASCII</button>
                                        <button type="button" class="btn btn-light"><i class="fa fa-rotate-left"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div id="headingFour" class="card-header px-0 py-0">
                                <button class="btn btn-light btn-block" data-target="#collapseFour" data-toggle="collapse">
                                    综合 / 其它
                                </button>
                            </div>
                            <div id="collapseFour" class="collapse" data-parent="#codetoolbox">
                                <div class="card-body px-2 py-2">
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-danger">GUID</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <textarea id="txtCode2"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>

